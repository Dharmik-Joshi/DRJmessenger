<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_new_user"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/new_msg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivLatest_Message_row"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"

        app:civ_border_color="#535353"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <TextView
        android:id="@+id/tvLatest_Message"
        android:layout_width="275dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:text="latest message"
        android:textColor="#2B2A2A"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivLatest_Message_row"
        app:layout_constraintTop_toBottomOf="@+id/tvusername_latest_message" />

    <TextView
        android:id="@+id/tvusername_latest_message"
        android:layout_width="146dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="20dp"

        android:textColor="#050505"
        app:layout_constraintBottom_toTopOf="@+id/tvLatest_Message"
        app:layout_constraintStart_toEndOf="@+id/ivLatest_Message_row"
        app:layout_constraintTop_toTopOf="parent" />

